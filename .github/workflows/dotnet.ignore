# This workflow will build a .NET project
# For more information see: https://docs.github.com/en/actions/automating-builds-and-tests/building-and-testing-net

name: .NET

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]

env:
  TEST_LOCATION: "github"

jobs:
  build:

    runs-on: windows-latest
    
    permissions:
      packages: write
      contents: read

    steps:
    - uses: actions/checkout@v3
    - name: Setup .NET
      uses: actions/setup-dotnet@v3
      with:
        dotnet-version: 7.0.x
    - name: Restore dependencies
      run: cd coh2-battlegrounds && dotnet restore
    - name: Build
      run: cd coh2-battlegrounds && dotnet build --no-restore
    - name: Test
      run: cd coh2-battlegrounds && dotnet test --no-build --verbosity normal
