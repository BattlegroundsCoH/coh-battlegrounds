<UserControl x:Class="Battlegrounds.Views.CompanyEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battlegrounds.Views"
             xmlns:vm="clr-namespace:Battlegrounds.ViewModels"
             xmlns:bp="clr-namespace:Battlegrounds.Models.Blueprints"
             xmlns:converters="clr-namespace:Battlegrounds.Converters"
             xmlns:c="clr-namespace:Battlegrounds.Models.Companies"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             d:DataContext="{d:DesignInstance Type=vm:CompanyEditorViewModel}">

    <UserControl.Resources>

        <converters:BlueprintNameConverter x:Key="BlueprintNameConverter"/>
        <converters:BlueprintBriefTextConverter x:Key="BlueprintBriefTextConverter"/>
        <converters:BlueprintHelpTextConverter x:Key="BlueprintHelpTextConverter"/>
        <converters:BlueprintIconConverter x:Key="BlueprintIconConverter"/>
        <converters:BlueprintIconMultiBindingConverter x:Key="BlueprintIconMultiConverter"/>
        <converters:BlueprintPortraitMultiBindingConverter x:Key="BlueprintPortraitMultiConverter"/>
        <converters:NullVisibilityConverter x:Key="NullVisibilityConverter"/>
        <converters:NullVisibilityConverter x:Key="NotNullVisibilityConverter" IsInverted="True"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>

        <DataTemplate x:Key="AvailableUnitTemplate">
            <Button Command="{Binding DataContext.SetSelectedSquadCommand, 
            RelativeSource={RelativeSource AncestorType=UserControl}}"
            CommandParameter="{Binding}"
            Background="Transparent"
            BorderThickness="0"
            Padding="0"
            Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            x:Name="UnitBorder"
                            Padding="12,8"
                            Margin="4"
                            Width="340"
                            Background="{StaticResource BackgroundBlueBrush}"
                            BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Unit Icon -->
                                <Image 
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,12,0">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource BlueprintIconMultiConverter}">
                                            <Binding Path="."/>
                                            <Binding Path="DataContext.Game" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>

                                <!-- Unit Name -->
                                <TextBlock Grid.Column="1"
                                 Foreground="{StaticResource ForegroundWhiteBrush}"
                                 VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <Binding Path="." Converter="{StaticResource BlueprintNameConverter}"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="UnitBorder" Property="Background" Value="{StaticResource BackgroundLightBlueBrush}"/>
                                <Setter TargetName="UnitBorder" Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="UnitBorder" Property="Background" Value="{StaticResource BackgroundDarkBlueBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="CompanyUnitTemplate">
            <Button 
                Command="{Binding DataContext.SetSelectedSquadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CommandParameter="{Binding}"
                Background="Transparent"
                BorderThickness="0"
                Padding="0"
                Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            x:Name="UnitBorder"
                            Padding="12,8"
                            Margin="4"
                            Width="280"
                            Background="{StaticResource BackgroundBlueBrush}"
                            BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Unit Icon -->
                                <Image 
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,12,0">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource BlueprintIconMultiConverter}">
                                            <Binding Path="Blueprint"/>
                                            <Binding Path="DataContext.Game" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>

                                <!-- Unit Name -->
                                <TextBlock 
                                    Grid.Column="1"
                                    Foreground="{StaticResource ForegroundWhiteBrush}"
                                    VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <Binding Path="Blueprint" Converter="{StaticResource BlueprintNameConverter}"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="UnitBorder" Property="Background" Value="{StaticResource BackgroundLightBlueBrush}"/>
                                <Setter TargetName="UnitBorder" Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="UnitBorder" Property="Background" Value="{StaticResource BackgroundDarkBlueBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DataTemplate>

    </UserControl.Resources>
    
    <Grid> <!-- No need for margin, outer container already has one -->
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Footer -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- Header with Lobby Name and Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="← Go Back" 
                Style="{StaticResource BackButton}"
                Command="{Binding LeaveCommand}"/>

            <TextBlock Grid.Column="1"
               Text="{Binding CompanyName}" 
               FontSize="24" 
               FontWeight="Bold"
               Foreground="{StaticResource ForegroundWhiteBrush}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
            
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <!-- Main Content -->
                <ColumnDefinition Width="*"/>
                <!-- Right sidebar-->
                <ColumnDefinition Width="330"/>

            </Grid.ColumnDefinitions>

            <!-- Company Composition Editor -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="36"/> <!-- Divider -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Available Units -->
                <TabControl Grid.Row="0"
           Background="{StaticResource BackgroundBlueBrush}"
           BorderBrush="{StaticResource BackgroundLightBlueBrush}"
           BorderThickness="1"
           Margin="8">
                    <TabControl.Resources>
                        <!-- Style for TabItems -->
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Border"
                                Margin="4,0,0,0"
                                Padding="12,8"
                                BorderThickness="1,1,1,0"
                                CornerRadius="4,4,0,0">
                                            <ContentPresenter ContentSource="Header"
                                            TextBlock.Foreground="{StaticResource ForegroundGrayBrush}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundLightBlueBrush}"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource BackgroundLightBlueBrush}"/>
                                                <Setter Property="TextBlock.Foreground" Value="{StaticResource ForegroundWhiteBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundLightBlueBrush}"/>
                                                <Setter Property="TextBlock.Foreground" Value="{StaticResource ForegroundWhiteBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                    </TabControl.Resources>

                    <TabItem Header="Infantry">
                        <ItemsControl ItemsSource="{Binding AvailableInfantryUnits}"
                     ItemTemplate="{StaticResource AvailableUnitTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </TabItem>
                    <TabItem Header="Support">
                        <ItemsControl ItemsSource="{Binding AvailableSupportUnits}"
                     ItemTemplate="{StaticResource AvailableUnitTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </TabItem>
                    <TabItem Header="Armour">
                        <ItemsControl ItemsSource="{Binding AvailableArmourUnits}"
                     ItemTemplate="{StaticResource AvailableUnitTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </TabItem>
                </TabControl>

                <!-- Company Composition -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Column="0"
                        Background="{StaticResource BackgroundBlueBrush}"
                        BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="8">
                        <StackPanel>
                            <TextBlock Text="Starting Units (0/4)"
                            FontSize="14" 
                            FontWeight="Bold"
                            Foreground="{StaticResource ForegroundGrayBrush}"
                            Margin="0,0,0,8"
                                   HorizontalAlignment="Center"/>
                            <ItemsControl
                                ItemsSource="{Binding StartingUnits}"
                                ItemTemplate="{StaticResource CompanyUnitTemplate}"/>
                        </StackPanel>
                    </Border>

                    <Border
                        Background="{StaticResource BackgroundBlueBrush}"
                        BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="8"
                        Grid.Column="1">
                        <StackPanel>
                            <TextBlock 
                            Text="Skirmish Phase (0/8)"
                            FontSize="14" 
                            FontWeight="Bold"
                            Foreground="{StaticResource ForegroundGrayBrush}"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Center"/>
                            <ItemsControl
                                ItemsSource="{Binding SkirmishPhaseUnits}"
                                ItemTemplate="{StaticResource CompanyUnitTemplate}"/>
                        </StackPanel>
                    </Border>

                    <Border
                        Background="{StaticResource BackgroundBlueBrush}"
                        BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="8"
                        Grid.Column="2">
                        <StackPanel>
                            <TextBlock 
                            Text="Battle Phase (0/12)"
                            FontSize="14" 
                            FontWeight="Bold"
                            Foreground="{StaticResource ForegroundGrayBrush}"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Center"/>
                            <ItemsControl
                                ItemsSource="{Binding BattlePhaseUnits}"
                                ItemTemplate="{StaticResource CompanyUnitTemplate}"/>
                        </StackPanel>
                    </Border>

                    <Border
                        Background="{StaticResource BackgroundBlueBrush}"
                        BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="8"
                        Grid.Column="3">
                        <StackPanel>
                            <TextBlock 
                            Text="Reserves (0/4)"
                            FontSize="14" 
                            FontWeight="Bold"
                            Foreground="{StaticResource ForegroundGrayBrush}"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Center"/>
                            <ItemsControl
                                ItemsSource="{Binding ReservesPhaseUnits}"
                                ItemTemplate="{StaticResource CompanyUnitTemplate}"/>
                        </StackPanel>
                    </Border>

                </Grid>

            </Grid>

            <!-- Selection/Hover infor -->
            <Border Grid.Column="1"
                  Margin="10,0,0,0"
                  Background="{StaticResource BackgroundBlueBrush}"
                  BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                  BorderThickness="1"
                  CornerRadius="8">

                <Grid DataContext="{Binding SelectionViewModel}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="260"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Selection -->
                    <TextBlock
                        Margin="8"
                        Text="Selected Squad"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{StaticResource ForegroundWhiteBrush}"/>

                    <!-- Squad details -->
                    <Border Grid.Row="1"
                            Background="{StaticResource BackgroundDarkBlueBrush}"
                            BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="8,0,8,8"
                            Padding="8"
                            Visibility="{Binding Converter={StaticResource NullVisibilityConverter}}">

                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Squad name -->
                            <StackPanel 
                                Orientation="Horizontal"
                                Grid.Row="0">
                                <!-- Squad icon -->
                                <Image Width="70" Height="70">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource BlueprintIconMultiConverter}">
                                            <Binding Path="Blueprint"/>
                                            <Binding Path="DataContext.Game" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <StackPanel                                    
                                    VerticalAlignment="Center">
                                    <TextBlock 
                                        Text="{Binding Blueprint, Converter={StaticResource BlueprintNameConverter}}"
                                        FontSize="16" 
                                        FontWeight="Bold"
                                        Foreground="{StaticResource ForegroundWhiteBrush}"
                                        TextWrapping="Wrap"
                                        Margin="8,0,0,0"/>

                                    <TextBlock
                                        Text="{Binding CustomName}"
                                        FontSize="16" 
                                        FontStyle="Italic"
                                        Foreground="{StaticResource ForegroundWhiteBrush}"
                                        TextWrapping="Wrap"
                                        Margin="8,0,0,0"/>
                                    
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Squad descriptions -->
                            <StackPanel
                                Margin="0,8,0,0"
                                Grid.Row="1">
                                <TextBlock 
                                    Text="{Binding Blueprint, Converter={StaticResource BlueprintHelpTextConverter}}"
                                    FontSize="14" 
                                    Foreground="{StaticResource ForegroundGrayBrush}"
                                    TextWrapping="Wrap"/>
                                <TextBlock 
                                    Text="{Binding Blueprint, Converter={StaticResource BlueprintBriefTextConverter}}"
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Margin="0,8,0,0"
                                    Foreground="{StaticResource ForegroundGrayBrush}"/>
                            </StackPanel>

                            <!-- Squad Costs -->
                            <StackPanel 
                                Orientation="Horizontal" 
                                VerticalAlignment="Bottom" 
                                Margin="0,8,0,0"
                                Grid.Row="2">

                                <StackPanel 
                                    Orientation="Horizontal"
                                    Visibility="{Binding Blueprint.Cost.Manpower, Converter={StaticResource ZeroToVisibilityConverter}}">
                                    <Image 
                                        Width="24"
                                        Height="24"
                                        Source="pack://siteoforigin:,,,/Assets/Resources/coh3_manpower_small.png"/>
                                    <TextBlock 
                                        Margin="4,0,0,0"
                                        Text="{Binding Blueprint.Cost.Manpower}"
                                        Foreground="{StaticResource ForegroundWhiteBrush}"
                                        VerticalAlignment="Center"
                                        />
                                </StackPanel>

                                <StackPanel 
                                    Orientation="Horizontal"
                                    Margin="8,0,0,0"
                                    Visibility="{Binding Blueprint.Cost.Munitions, Converter={StaticResource ZeroToVisibilityConverter}}">
                                    <Image 
                                        Width="24"
                                        Height="24"
                                        Source="pack://siteoforigin:,,,/Assets/Resources/coh3_munitions_small.png"/>
                                    <TextBlock 
                                        Margin="4,0,0,0"
                                        Text="{Binding Blueprint.Cost.Munitions}"
                                        Foreground="{StaticResource ForegroundWhiteBrush}"
                                        VerticalAlignment="Center"
                                        />
                                </StackPanel>
                                
                                <StackPanel 
                                    Orientation="Horizontal"
                                    Margin="8,0,0,0"
                                    Visibility="{Binding Blueprint.Cost.Fuel, Converter={StaticResource ZeroToVisibilityConverter}}">
                                    <Image 
                                        Width="24"
                                        Height="24"
                                        Source="pack://siteoforigin:,,,/Assets/Resources/coh3_fuel_small.png"/>
                                    <TextBlock 
                                        Margin="4,0,0,0"
                                        Text="{Binding Blueprint.Cost.Fuel}"
                                        Foreground="{StaticResource ForegroundWhiteBrush}"
                                        VerticalAlignment="Center"
                                        />
                                </StackPanel>

                            </StackPanel>

                        </Grid>
                    </Border>
                    
                    <!-- Squad Purchase options -->
                    <Grid
                        Visibility="{Binding Converter={StaticResource NullVisibilityConverter}}"                       
                        Grid.Row="2">

                        <Border
                            Visibility="{Binding IsSquad, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                            Background="{StaticResource BackgroundDarkBlueBrush}"
                            BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="8,0,8,8"
                            Padding="8">

                            <StackPanel>
                                <TextBlock
                                    Margin="4"
                                    Text="Add to Company"
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource ForegroundGrayBrush}"/>
                                <Button 
                                    Content="Add to Starting Units" 
                                    Grid.Column="0" 
                                    Grid.Row="0" 
                                    Style="{StaticResource ActionButton}" 
                                    Margin="4"
                                    Command="{Binding AddToCompanyCommand}">
                                    <Button.CommandParameter>
                                        <c:SquadPhase>StartingPhase</c:SquadPhase>
                                    </Button.CommandParameter>
                                </Button>
                                <Button 
                                    Content="Add to Skirmish Phase" 
                                    Grid.Column="1" 
                                    Grid.Row="0" 
                                    Style="{StaticResource ActionButton}" 
                                    Margin="4"
                                    Command="{Binding AddToCompanyCommand}">
                                    <Button.CommandParameter>
                                        <c:SquadPhase>SkirmishPhase</c:SquadPhase>
                                    </Button.CommandParameter>
                                </Button>
                                <Button 
                                    Content="Add to Battle Phase" 
                                    Grid.Column="0" 
                                    Grid.Row="1" 
                                    Style="{StaticResource ActionButton}" 
                                    Margin="4"
                                    Command="{Binding AddToCompanyCommand}">
                                    <Button.CommandParameter>
                                        <c:SquadPhase>BattlePhase</c:SquadPhase>
                                    </Button.CommandParameter>
                                </Button>
                                <Button 
                                    Content="Add to Reserves" 
                                    Grid.Column="1" 
                                    Grid.Row="1" 
                                    Style="{StaticResource ActionButton}" 
                                    Margin="4"
                                    Command="{Binding AddToCompanyCommand}">
                                    <Button.CommandParameter>
                                        <c:SquadPhase>ReservesPhase</c:SquadPhase>
                                    </Button.CommandParameter>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Squad Data -->
                    <Grid                        
                        Visibility="{Binding Converter={StaticResource NullVisibilityConverter}}"                       
                        Grid.Row="2">
                        <Border
                            Visibility="{Binding IsSquad, Converter={StaticResource BooleanToVisibility}}"
                            Background="{StaticResource BackgroundDarkBlueBrush}"
                            BorderBrush="{StaticResource BackgroundLightBlueBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="8,0,8,8"
                            Padding="8">

                            <Grid>
                                <TextBlock
                                    Margin="4"
                                    Text="Squad Settings"
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource ForegroundGrayBrush}"/>

                                <StackPanel Margin="0,8,0,0">


                                    <Button
                                        Content="Retire Squad"
                                        Command="{Binding RetireSquadCommand}"
                                        Style="{StaticResource ActionButton}"
                                        />

                                </StackPanel>

                            </Grid>

                        </Border>                        
                    </Grid>
                    
                </Grid>                
            </Border>
        </Grid>

        <!-- Footer with Save Button -->
        <Grid Grid.Row="2" Margin="0,8,0,0">

            <StackPanel 
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Label 
                    Content="{Binding CompanyState}"
                    Foreground="{StaticResource ForegroundWhiteBrush}"
                    VerticalAlignment="Center"/>
            </StackPanel>

            <Button 
                Command="{Binding SaveCommand}"
                HorizontalAlignment="Right"
                Style="{StaticResource ActionButton}"
                IsEnabled="{Binding IsDirty}">
                Save Company
            </Button>
        </Grid>

    </Grid>
</UserControl>
