    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="YamlDotNet" Version="15.1.2" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\..\..\proto\lobby.proto" GrpcServices="Client">
      <Link>Protos\lobby.proto</Link>
    </Protobuf>
  </ItemGroup>

