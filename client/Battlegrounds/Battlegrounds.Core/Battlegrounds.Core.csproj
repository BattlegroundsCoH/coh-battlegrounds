<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Campaigns\" />
    <Folder Include="Companies\Serializing\" />
    <Folder Include="Companies\Templates\" />
    <Folder Include="Games\Archivers\" />
    <Folder Include="Games\Controllers\" />
    <Folder Include="Games\Replays\" />
