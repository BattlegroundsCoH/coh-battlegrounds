<UserControl x:Class="BattlegroundsApp.Controls.Editor.Portrait"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattlegroundsApp.Controls.Editor"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="108"
             Width="110"
             MaxWidth="110"
             MinWidth="110"
             Height="140"
             MaxHeight="140"
             MinHeight="140">
    <Canvas Width="110" Height="140">
        <Canvas>
            <Image x:Name="PortraitImage"
                   Width="152"
                   Height="190"
                   Canvas.Left="-28"
                   Canvas.Top="-16">
                <Image.Clip>
                    <RectangleGeometry Rect="28,16,92,140"/>
                </Image.Clip>
            </Image>
        </Canvas>
        <Canvas>
            <Image x:Name="SymbolImage"
                   Width="36"
                   Height="36"
                   Canvas.Left="74"
                   Canvas.Top="0">
            </Image>
        </Canvas>
        <Rectangle
            x:Name="MaskRect"
            Fill="{Binding MaskColour}"
            Opacity="{Binding MaskOpacity}"
            Width="92"
            Height="140"/>
    </Canvas>
</UserControl>
