<UserControl x:Class="BattlegroundsApp.Controls.Editor.Portrait"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattlegroundsApp.Controls.Editor"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="108"
             Width="112"
             MaxWidth="112"
             MinWidth="112"
             Height="140"
             MaxHeight="140"
             MinHeight="140">
    <Canvas Width="190" Height="190">
        <Canvas>
            <Image Source="{Binding PortraitSource}"
                   Width="152"
                   Height="190"
                   Canvas.Left="-28"
                   Canvas.Top="-16">
                <Image.Clip>
                    <RectangleGeometry Rect="28,16,92,140"/>
                </Image.Clip>
            </Image>
        </Canvas>
        <Canvas>
            <Image Source="{Binding SymbolSource}"
                   Width="36"
                   Height="36"
                   Canvas.Left="76"
                   Canvas.Top="0">
            </Image>
        </Canvas>
        <Rectangle
            Fill="{Binding MaskColour}"
            Opacity="{Binding MaskOpacity}"
            Width="92"
            Height="140"/>
    </Canvas>
</UserControl>
