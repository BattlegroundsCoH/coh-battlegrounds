<UserControl x:Class="BattlegroundsApp.Controls.CompanyBuilderControls.AbilitySlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattlegroundsApp.Controls.CompanyBuilderControls"
             mc:Ignorable="d" 
             d:DesignHeight="72" d:DesignWidth="236">
    <Canvas Width="236" Height="72">
        <Canvas Width="236"  Height="72" Background="LightGray">
            <TextBlock Text="{Binding AbilityName}" Canvas.Left="50" Canvas.Top="5"/>

            <Image Canvas.Left="5" Canvas.Top="5" Source="{Binding AbilityIcon, TargetNullValue={x:Null}}"
                           Width="42" Height="42"/>

            <local:CostControl x:Name="CostDisplay" Canvas.Bottom="0" Height="24"/>

        </Canvas>
        <Button Width="25" Height="25" Content="X" Canvas.Right="0" Click="RemoveAbility"/>
    </Canvas>
</UserControl>
