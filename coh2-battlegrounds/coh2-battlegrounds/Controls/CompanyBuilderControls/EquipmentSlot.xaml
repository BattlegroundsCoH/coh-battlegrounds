<UserControl x:Class="BattlegroundsApp.Controls.CompanyBuilderControls.EquipmentSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattlegroundsApp.Controls.CompanyBuilderControls" xmlns:controls="clr-namespace:BattlegroundsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="86" d:DesignWidth="236" 
             AllowDrop="True"
             Drop="UserControl_Drop">
    <Canvas Width="236" Height="86">
        <Canvas Width="236"  Height="86" Background="LightGray">
            <TextBlock Text="{Binding EquipmentName}"
                       Canvas.Left="50" 
                       Canvas.Top="5"/>

            <Image Canvas.Left="5" Canvas.Top="5" 
                   Source="{Binding EquipmentImage, TargetNullValue={x:Null}}"
                           Width="42" Height="42"/>

            <local:CostControl 
                x:Name="CostDisplay" 
                Canvas.Bottom="0" 
                Height="24"/>

        </Canvas>
        <Button Width="26" Height="26" Content="X" Canvas.Right="0" 
                Click="RemoveEquipment"/>
    </Canvas>
</UserControl>
