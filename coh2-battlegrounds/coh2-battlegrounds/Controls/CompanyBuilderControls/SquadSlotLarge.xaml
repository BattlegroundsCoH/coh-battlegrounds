<UserControl x:Class="BattlegroundsApp.Controls.CompanyBuilderControls.SquadSlotLarge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattlegroundsApp.Controls.CompanyBuilderControls"
             xmlns:convertor="clr-namespace:BattlegroundsApp.Utilities.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="225">

    <UserControl.Resources>
        <convertor:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Canvas Width="225" Height="64"  MouseDown="OnMouseDown">
        <Canvas Width="225" Height="64" Background="LightGray">
            <TextBlock Text="{Binding SquadName}" Canvas.Left="50" Canvas.Top="5"/>

            <Image Canvas.Left="5" Canvas.Top="5" Source="{Binding SquadIcon, TargetNullValue={x:Null}}"
                           Width="42" Height="42"/>

            <TextBlock Text="{Binding SquadCost.Manpower}" Canvas.Left="5" Canvas.Bottom="3" Foreground="DarkOrange"/>

            <TextBlock Text="{Binding SquadCost.Fuel}" Canvas.Left="35" Canvas.Bottom="3" Foreground="green"/>

            <TextBlock Text="{Binding SquadCost.Munitions}" Canvas.Left="65" Canvas.Bottom="3" Foreground="red"/>

            <!-- TODO: REPLACE THE ICON OF TRANSPORT TO THE ACTUAL TRANSPORT ICON -->
            <Image Canvas.Right="5" Canvas.Bottom="0" Visibility="{Binding SquadIsTransported, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="23" DecodePixelHeight="23" UriSource="pack://application:,,,/Resources/ingame/test_unit_transport.png"/>
                </Image.Source>
            </Image>

            <StackPanel Canvas.Left="50" Canvas.Bottom="20" Orientation="Horizontal">
                <Image>
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="13" DecodePixelHeight="13" UriSource="pack://application:,,,/Resources/ingame/test_unit_veterancy.png"/>
                    </Image.Source>
                </Image>
            </StackPanel>
        </Canvas>
        <Button Width="25" Height="25" Content="X" Canvas.Left="200" Click="RemoveUnit"/>
    </Canvas>
</UserControl>
