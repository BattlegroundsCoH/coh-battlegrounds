<UserControl x:Class="BattlegroundsApp.Controls.CompanyBuilderControls.AvailableItemSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattlegroundsApp.Controls.CompanyBuilderControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="275" Width="275" Height="40" >
    <Border Background="LightGray" BorderThickness="1.1" BorderBrush="Black" MouseMove="OnMouseMove" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave">
        <Canvas>
            <Button Content="+" Canvas.Top="5.5" Canvas.Left="5" Width="25" Height="25" IsEnabled="{Binding CanAdd}"/>
            <Image Canvas.Left="35" Canvas.Top="2.7" Source="{Binding SquadIcon, TargetNullValue={x:Null}}"
                           Width="32" Height="32"/>
            <TextBlock Canvas.Top="10" Canvas.Left="80.5" Text="{Binding SquadName}"/>
        </Canvas>
    </Border>
</UserControl>
