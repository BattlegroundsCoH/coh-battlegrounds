<local:CoreAppWindow x:Class="BattlegroundsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattlegroundsApp"
        xmlns:views="clr-namespace:BattlegroundsApp.Views"
        mc:Ignorable="d"
        Title="Battlegrounds" Height="850" Width="1400" WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        
        <!-- Row 1 -->
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Battlegrounds Logo" FontSize="22" Margin="0,0,0,10"/>

        <!-- Row 2 -->
        <ContentControl Grid.Row="2" Grid.Column="2" Grid.RowSpan="7" Grid.ColumnSpan="7" Margin="5,0,0,0" Content="{Binding}"/>

        <Button x:Name="DashboardButton" Grid.Row="2" Grid.Column="1" Content="Dashboard" Margin="0,0,0,0"
                Click="Dashboard_Click"/>

        <!-- Row 3 -->
        <Button x:Name="NewsButton" Grid.Row="3" Grid.Column="1" Content="News" Margin="0,5,0,0" IsEnabled="False"
                Click="News_Click"/>

        <!-- Row 4 -->
        <Button x:Name="CompanyBuilderButton" Grid.Row="4" Grid.Column="1" Content="Company Builder" Margin="0,5,0,0"
                Click="CompanyBuilder_Click"/>

        <!-- Row 5 -->
        <Button x:Name="CampaignButton" Grid.Row="5" Grid.Column="1" Content="Campaign" Margin="0,5,0,0" IsEnabled="False"
                Click="Campaign_Click"/>

        <!-- Row 6 -->
        <Button x:Name="GameBrowserButton" Grid.Row="6" Grid.Column="1" Content="Game Browser" Margin="0,5,0,0"
                Click="GameBrowser_Click"/>

        <!-- Row 7 -->
        <Button x:Name="ExitButton" Grid.Row="7" Grid.Column="1" Content="Exit" Margin="0,15,0,0"
                Click="Exit_Click"/>

    </Grid>
</local:CoreAppWindow>
