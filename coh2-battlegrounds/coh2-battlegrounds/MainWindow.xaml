<Window x:Class="coh2_battlegrounds.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:coh2_battlegrounds"
        mc:Ignorable="d" FontSize="12" FontFamily="Segoe UI Light"
        Title="Battlegrounds" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="18" FontWeight="SemiBold"
                   FontFamily="Segoe UI" Text="Game Browser"/>

        <Button x:Name="HostGameButton" Grid.Column="3" Grid.Row="4" Content="Host Game"
                Click="hostGame_Click"/>

        <Button x:Name="JoinLobbyButton" Grid.Column="3" Grid.Row="3" Content="Join Lobby"
                Click="joinLobby_Click" IsEnabled="False" />

        <Button x:Name="RefreshLobbyListButton" Grid.Column="3" Grid.Row="2" Content="Refresh"
                Click="refreshLobbyList_Click"/>

        <ListView x:Name="LobbyList" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="5"
                  Width="350" Height="250">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding _lobbyName}"/>
                    <GridViewColumn Header="Password" DisplayMemberBinding="{Binding _lobbyPasswordProtected}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
