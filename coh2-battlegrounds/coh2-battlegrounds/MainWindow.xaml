<Window x:Class="BattlegroundsApp.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:BattlegroundsApp"
                     xmlns:localeConvertor="clr-namespace:BattlegroundsApp.Utilities.Converters" xmlns:modals="clr-namespace:BattlegroundsApp.Modals"
                     mc:Ignorable="d"
                     Title="{Binding Title}" 
                     WindowStartupLocation="CenterScreen" 
                     WindowStyle="None"
                     AllowsTransparency="True"
                     Height="850" Width="1400"
                     MinHeight="850" MinWidth="1400"
                     Background="{StaticResource BackgroundDarkBlueBrush}"
                     Closing="CoreAppWindow_Closing">

    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <!-- Main window with resizeable outline margin -->
                        <Border x:Name="Container" Padding="{Binding OuterMarginThickness}">
                            <Grid Background="{StaticResource BackgroundDarkBlueBrush}">
                                
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="{Binding ResizeBorderThickness}"
                      CaptionHeight="{Binding TitleHeight}"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <modals:ModalControl x:Name="ModalView" 
                         ModalMaskBehaviour="None"
                         ModalMaskOpacity="0.7"
                         ModalMaskColour="Black">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ContentControl Name="LeftContent" 
                        Grid.Row="0" Grid.Column="0"
                        Content="{Binding}">
            </ContentControl>

            <modals:ModalControl Grid.Row="0" Grid.Column="1" 
                                 Grid.RowSpan="8"
                                 x:Name="RightModalView"
                                 ModalMaskBehaviour="ExitWhenClicked"
                                 ModalMaskOpacity="0.7"
                                 ModalMaskColour="Black">

                <ContentControl Name="RightContent"                         
                        Content="{Binding}" Background="#273441"/>
            </modals:ModalControl>

        </Grid>
    </modals:ModalControl>    
</Window>
