<modals:Modal  xmlns:modals="clr-namespace:BattlegroundsApp.Modals" 
               x:Class="BattlegroundsApp.Modals.CompanyBuilder.SelectedSquadModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattlegroundsApp.Modals.CompanyBuilder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="2.5" Background="LightGray">
        <StackPanel Orientation="Horizontal">
            <Image Width="64" Height="64"/>
            <StackPanel>
                <TextBlock Text="Name" TextWrapping="Wrap"/>
                <TextBlock Text="Long Description" TextWrapping="Wrap"/>
                <TextBlock Text="Short Description" TextWrapping="Wrap"/>
            </StackPanel>            
        </StackPanel>
        
    </Border>
</modals:Modal>
