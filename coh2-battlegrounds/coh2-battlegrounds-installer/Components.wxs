<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	
	<Fragment>

		<!-- Product Componets -->
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
			
			<!-- Shortcut -->
			<ComponentRef Id="MainAppShortcut"/>
			<ComponentRef Id="MainAppDescktopShortcut"/>
			
		</ComponentGroup>
	
		<!-- Installed files -->
		<DirectoryRef Id="INSTALLFOLDER">
			
			<!-- Shortcut to main application -->
			<Component Id="MainAppShortcut" Guid="{8728FEA1-9313-49D2-AAFA-9E17A395A577}">

				<Shortcut Id="MainAppShortcut" 
						  Name="!(loc.ProductNameFolder)" 
						  Target="[INSTALLFOLDER]coh2-battlegrounds.exe" 
						  Directory="ProgramMenuFolder" 
						  WorkingDirectory="INSTALLFOLDER"
						  Icon="icon.ico"/>
				
				<!-- Our unique key for this component shortcut -->
				<RegistryValue Id="RegShortcutKey" Root="HKCU" Key="SOFTWARE\!(loc.ProductNameFolder)" Name="MenuShortcut" Value="1" Type="integer" KeyPath="yes" />
				
			</Component>

			<Component Id="MainAppDescktopShortcut" Guid="{1E335065-E97E-4D7C-8C52-24DDE9C2DCBF}">

				<Shortcut Id="MainAppDescktopShortcut"
						  Name="!(loc.ProductNameFolder)"
						  Target="[INSTALLFOLDER]coh2-battlegrounds.exe"
						  Directory="DesktopFolder"
						  WorkingDirectory="INSTALLFOLDER"
						  Icon="icon.ico"/>

				<!-- Our unique key for this component shortcut -->
				<RegistryValue Id="RegDesktopShortcutKey" Root="HKCU" Key="SOFTWARE\!(loc.ProductNameFolder)" Name="DesktopShortcut" Value="1" Type="integer" KeyPath="yes" />

			</Component>
			
		</DirectoryRef>
		
	</Fragment>
	
</Wix>
