<UserControl x:Class="Battlegrounds.UI.Application.Components.UserAvatar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battlegrounds.UI.Application.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0, 50, 0, 50">

        <Ellipse Width="150" Height="150">
            <Ellipse.Fill>
                <ImageBrush ImageSource="pack://application:,,,/Battlegrounds.UI.Application;component/Resources/User/Unknown.png"/>
            </Ellipse.Fill>
        </Ellipse>

        <TextBlock x:Name="username"
                   Text="{Binding PlayerName}"
                   VerticalAlignment="Center"
                   FontSize="42"
                   Foreground="{StaticResource ForegroundWhiteBrush}"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0, 230, 0, 0"/>

    </Grid>
</UserControl>
