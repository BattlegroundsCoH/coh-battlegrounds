<UserControl x:Class="Battlegrounds.UI.Controls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battlegrounds.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             IsEnabledChanged="UserControl_IsEnabledChanged">
    <Grid 
        x:Name="GridContainer"
        MouseEnter="GridContainer_MouseEnter"
        MouseLeave="GridContainer_MouseLeave">
        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                Width="*"/>
            <ColumnDefinition 
                x:Name="ImgColumn"/>
        </Grid.ColumnDefinitions>
        <Image 
            x:Name="SelfImage"
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,2,8,2"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"/>
        <ContentPresenter 
            x:Name="SelfContent"
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.ColumnSpan="2" 
            Margin="5,0,5,0"/>
    </Grid>
</UserControl>
